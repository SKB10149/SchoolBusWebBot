{
  "type": "bubble",
  "direction": "ltr",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "日付を選択",
        "weight": "bold",
        "size": "xl",
        "margin": "none",
        "align": "center"
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "vertical",
    "spacing": "md",
    "contents": [
      {
        "type": "button",
        "height": "sm",
        "action": {
          "type": "datetimepicker",
          "label": "いつから？",
          "data": "dateFrom",
          "mode": "date"
        }
      },
      {
        "type": "button",
        "action": {
          "type": "datetimepicker",
          "label": "いつまで？",
          "data": "dateTo",
          "mode": "date"
        }
      }
    ],
    "flex": 0
  },
  "action": {
    "type": "postback",
    "label": "action",
    "data": "hello"
  }
}